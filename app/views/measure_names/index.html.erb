<h1>Listing measure_names</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measure_names.each do |measure_name| %>
      <tr>
        <td><%= measure_name.name %></td>
        <td><%= link_to 'Show', measure_name %></td>
        <td><%= link_to 'Edit', edit_measure_name_path(measure_name) %></td>
        <td><%= link_to 'Destroy', measure_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

