<%- model_class = MeasureUnit -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Units of Measure' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:abbreviation) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @measure_units.each do |measure_unit| %>
      <tr>
        <td><%= measure_unit.id %></td>
        <td><%= measure_unit.name %></td>
        <td><%= measure_unit.abbreviation %></td>
        <td><%=l measure_unit.created_at, format: :long %></td>
        <td>
          <%= link_to measure_unit_path(measure_unit), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to measure_unit_path(measure_unit), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_measure_unit_path,
            :class => 'btn btn-primary' %>
