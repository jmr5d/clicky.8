<h1>Listing measure_units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measure_units.each do |measure_unit| %>
      <tr>
        <td><%= measure_unit.name %></td>
        <td><%= measure_unit.abbreviation %></td>
        <td><%= link_to 'Show', measure_unit %></td>
        <td><%= link_to 'Edit', edit_measure_unit_path(measure_unit) %></td>
        <td><%= link_to 'Destroy', measure_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

