<h1>Listing preferences</h1>

<table>
  <thead>
    <tr>
      <th>Measure name</th>
      <th>User</th>
      <th>Position</th>
      <th>Measure unit</th>
      <th>Frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.measure_name %></td>
        <td><%= preference.user %></td>
        <td><%= preference.position %></td>
        <td><%= preference.measure_unit %></td>
        <td><%= preference.frequency %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Preference', new_preference_path %>
