<div class="page-header">
  <h1><%=t ".title", default: "Sign Up" %></h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
  <%= devise_error_messages! %>

  
  <div class="form-group">
    <%= f.label :username, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.text_field :username, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>
  

  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :password, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
    </div>
  </div>
     
  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation, class: "text-field form-control", html: {autocomplete: "off"} %>
    </div>
  </div>



    <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.text_field :first_name, class: "text-field form-control" %>
    </div>
  </div>
     
  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.text_field :last_name, class: "text-field form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :birthdate, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.datetime_select :birthdate, :start_year => 1900, :end_year => 2005, :default => {year: Date.current.year-25, month: 01, day: 01, hour: 00, minute: 00} %>
    </div>
  </div>
     
  <div class="form-group">
    <%= f.label :height, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.select :height, 24..120, :selected => 70 %> Note: 60" = 5 ft., 72" = 6 ft., etc.
    </div>
  </div>

    <div class="form-group">
      <%= f.label :gender, class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.select :gender, options_for_select([ "Male", "Female" ]), :include_blank => "Select One" %>
      </div>
    </div>

     
  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>

