<h1>Listing measurements</h1>

<table>
  <thead>
    <tr>
      <th>Altitude</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Happened at</th>
      <th>User</th>
      <th>Measure name</th>
      <th>Measure unit</th>
      <th>Value</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.altitude %></td>
        <td><%= measurement.latitude %></td>
        <td><%= measurement.longitude %></td>
        <td><%= measurement.happened_at %></td>
        <td><%= measurement.user %></td>
        <td><%= measurement.measure_name %></td>
        <td><%= measurement.measure_unit %></td>
        <td><%= measurement.value %></td>
        <td><%= measurement.notes %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

