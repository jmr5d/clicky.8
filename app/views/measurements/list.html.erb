<%- model_class = Measurement -%>
<div class="page-header">
  <h1><%=t '.title', :default => Measurement %></h1>
</div>
  <ul>  
    <% @measurements.each do |measurement| %>
        <li><%= @user.first_name %> <strong><%= measurement.measure_name.name %></strong> <% if measurement.measure_unit.abbreviation != "bool" %> <%= measurement.value %> <%= measurement.measure_unit.abbreviation %><% else %><% end %> on <%=l measurement.happened_at, format: "%A, %-m/%-d/%y, at %l:%M %P" %>

          <%= link_to measurement_path(measurement), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to measurement_path(measurement), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </li>
    <% end %>
  </ul>

<%= link_to 'Record a New Activity',
            root_path,
            :class => 'btn btn-primary' %>